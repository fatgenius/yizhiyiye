<?xml version="1.0"?>
<robot name="luyu_base">

  <!-- Color-->
  <material name="Black">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="TransparentBlack">
    <color rgba="0.2 0.2 0.2 0.8"/>
  </material>
  <material name="Orange">
    <color rgba="1.0  0.55 0.0 1.0"/>
  </material>
  <material name="Grey">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>
  <material name="DarkGrey">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="White">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  <material name="OffWhite">
    <color rgba="0.8 0.8 0.8 1.0"/>
  </material>
  <material name="Blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="TransparentGreen">
    <color rgba="0.0 0.8 0.0 0.5"/>
  </material>

  <!-- Base / link -->
  <link name="base_link">
    <visual>
      <geometry>
	      <box size="1 0.7 0.35"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="OffWhite" />
    </visual>
    <collision>
      <geometry>
	       <box size="1.10 0.8 0.45"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <!--<inertial><mass value="1"/><inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/></inertial>-->
  </link>

  <!-- Base / footprint -->
  <link name="base_footprint">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.001"/>
      </geometry>
      <material name="TransparentGreen"/>
    </visual>
  </link>
  <joint name="base_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.175"/>
    <parent link="base_link"/>
    <child link="base_footprint"/>
  </joint>

  <!-- Sensor / laser -->
  <link name="laser_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.5 0 0.175"/>
    <parent link="base_link"/>
    <child link="laser_link"/>
  </joint>
  
   <!-- Sensor / laser -->
  <link name="base_laser">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  <joint name="base_laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.5 0 0.175"/>
    <parent link="base_link"/>
    <child link="base_laser"/>
  </joint>

  <!-- Sensor / imu -->
  <link name="imu_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.005"/>
      <geometry>
        <cylinder length="0.01" radius="0.02"/>
      </geometry>
      <material name="Red"/>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <origin rpy="0 0 0" xyz="-0.35 0 0.175"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>

  <!-- Sensor / GPS -->
  <link name="GPS_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.18" radius="0.05"/>
      </geometry>
      <material name="White"/>
    </visual>
  </link>
  <joint name="GPS_joint" type="fixed">
    <origin rpy="0 0 0" xyz="-0.35 0 1.04"/>
    <parent link="base_link"/>
    <child link="GPS_link"/>
  </joint>

</robot>
